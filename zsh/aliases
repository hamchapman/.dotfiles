# git

alias g='git status'
alias gl='git l'
alias ga='git add -p'
alias gsui='git submodule update -i'
alias gsu='git submodule update'
alias gpu='git push -u origin HEAD'
alias gds='git diff --staged'
alias gca='git commit --amend --no-edit'

# cd shortcuts

alias xdo='cd ~/.dotfiles'
alias xdf='cd ~/.dotfiles'
alias xpr='cd ~/projects'
alias xsc='cd ~/scratch'
alias xjo='cd ~/projects/jottly'

# misc

alias be='bundle exec'
alias s='subl .'
alias gitx='open -a gitx .'
alias reload='source ~/.zshrc'
alias thidd='if (defaults read com.apple.finder AppleShowAllFiles | grep -q YES); then defaults write com.apple.finder AppleShowAllFiles NO; else defaults write com.apple.finder AppleShowAllFiles YES; fi
killall Finder /System/Library/CoreServices/Finder.app'
alias tdesk='if (defaults read com.apple.finder CreateDesktop | grep -q true); then defaults write com.apple.finder CreateDesktop false; else defaults write com.apple.finder CreateDesktop true; fi
killall Finder /System/Library/CoreServices/Finder.app'
alias prune='brew cleanup && gem cleanup && docker system prune'
