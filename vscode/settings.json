{
    // Insert spaces when pressing Tab
    "editor.insertSpaces": true,

    // Disable the minimap
    "editor.minimap.enabled": false,

    // Controls whether the editor should render whitespace characters
    "editor.renderWhitespace": "selection",

    // Set rulers at 80, 100, and 120 characters
    "editor.rulers": [80, 100, 120],

    // When enabled, will trim trailing whitespace when you save a file
    "files.trimTrailingWhitespace": true,

    // Default end of line character
    "files.eol": "\n",

    // Glob patterns for excluding folders and files
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // Searching for multiple files and opening them will leave all files open
    // rather than only leaving the most recently selected one open
    "workbench.editor.enablePreview": false,

    // Set the maximum number of open editors to 8. Old, clean editors will be
    // closed once the number exceeds 10.
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 12,

    // Theme choices
    "workbench.colorTheme": "Default Light Modern",
    "workbench.preferredDarkColorTheme": "Oceanic Next Sublime + Sweet Bar",

    // Open new editors with an empty file, not the welcome screen or anything
    // like that
    "workbench.startupEditor": "newUntitledFile",

    "[git-commit]": {
        "editor.rulers": [80],
        "editor.wordWrap": "on"
    },
    "workbench.iconTheme": "material-icon-theme",
    "editor.matchBrackets": "never",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "window.restoreWindows": "preserve",
    "window.autoDetectColorScheme": true,
    "security.workspace.trust.untrustedFiles": "open",
    "kotlin.languageServer.enabled": false,
    "kotlin.debugAdapter.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true,
        "rust": true,
        "javascript": true
    },
    "terminal.integrated.scrollback": 10000,
    "rust-analyzer.cargo.extraArgs": [
        "--profile",
        "rust-analyzer"
    ],
    "workbench.editor.empty.hint": "hidden",
    "rust-analyzer.procMacro.ignored": {},
    "rust-analyzer.diagnostics.disabled": [
        "unresolved-proc-macro"
    ],
    "editor.inlayHints.enabled": "offUnlessPressed",
    "files.autoSave": "onFocusChange",
    "githubPullRequests.pullBranch": "never",
}